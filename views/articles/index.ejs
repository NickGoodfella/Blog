<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Welcome to my custom made blogging website! Did this for fun and to improve my skills!">
    <meta name="author" content="Nick Sajna">

  
    <title>Nick's Blog</title>
  
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  
    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  
    <!-- Custom styles for this template -->
    <link href="css/clean-blog.min.css" rel="stylesheet">
    <meta name="google-site-verification" content="SGlrelKid0-pegbmlObIeVbJLPmjifOLe7v4e9kwbOI" />
  </head>
  
  <body>
    <!-- Navigation -->
    <%- include('../partials/nav.ejs')  %> 
  
    <header class="masthead" style="background-image: url('img/home-bg.jpg')">
      <div class="overlay"></div>
      <div class="masthead">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div class = "container">
      <div class = "col-lg-4 col-md-10 mx-auto">
      <form action="/" method="GET" class="form-inline">
        <div class="form-group">
            <input type="text" name="search" placeholder="Search Articles" class="form-control">
        </div>
      </form>
      </div>
        <% articles.forEach(article => { %>
            <div class ="row">
  
                <div class="col-lg-4 col-md-10 mx-auto">
              
                  <div class="post-preview">
                  <a href="articles/<%= article.slug %>">
                  <h2 class="post-title"><%= article.title %></h2>
                  <div class="card-text mb-2"><%= article.description %></div>
                  </a>
                  <div class="post-meta"> Posted by
                    <a href="/"><%= article.screenName %> </a>
                      on <%= article.createdAt.toLocaleDateString() %>
                  </div>
                  </div>
                </div>
            </div>
            <hr>
        <%}) %>
    </div>
    <hr>

    <%- include('../partials/footer.ejs')  %> 
 <!-- Bootstrap core JavaScript -->
 <script src="vendor/jquery/jquery.min.js"></script>
 <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

 <!-- Custom scripts for this template -->
 <script src="js/clean-blog.min.js"></script>



   
</body>
</html>